        "version": "0.1.0",
        "title": "BookMonkey 3 API",
        "description": "**DEMO**\n\nThis is a demo backend for serving books. All data is erased after some inactivity."
    },
    "basePath": "/",
    "schemes": [
        "https"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "tags": [
        {
            "name": "book",
            "description": "BookMonkey 3 books"
        },
        {
            "name": "secure/book",
            "description": "Secure: BookMonkey 3 books. SECURED via pseudo bearer auth. Please type in for authorization: 'Bearer 1234567890' (without quotes)"
        },
